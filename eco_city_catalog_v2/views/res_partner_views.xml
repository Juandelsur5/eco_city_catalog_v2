<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_form_eco_location" model="ir.ui.view">
        <field name="name">res.partner.form.eco.location</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <!-- Insertar Eco Location justo después del bloque de dirección -->
            <xpath expr="//field[@name='country_id']/ancestor::group[1]" position="after">
                <group string="Eco Location">
                    <field name="eco_country_id"/>
                    <field name="eco_state_id"/>
                    <field name="eco_city_id"/>
                    <field name="eco_neighborhood_id"/>
                </group>
            </xpath>

        </field>
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_eco_city_tree" model="ir.ui.view">
        <field name="name">eco.city.tree</field>
        <field name="model">eco.city</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="state_id"/>
                <field name="country_id"/>
            </tree>
        </field>
    </record>

    <record id="view_eco_city_form" model="ir.ui.view">
        <field name="name">eco.city.form</field>
        <field name="model">eco.city</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="state_id"/>
                        <field name="country_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_eco_city" model="ir.actions.act_window">
        <field name="name">Eco Cities</field>
        <field name="res_model">eco.city</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_eco_city_root"
              name="Eco City Catalog"
              sequence="10"/>

    <menuitem id="menu_eco_city"
              name="Cities"
              parent="menu_eco_city_root"
              action="action_eco_city"
              sequence="10"/>

</odoo>
